<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" type="text/css" />
    <link href="https://unpkg.com/ng-table@2.1.0/bundles/ng-table.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    @RenderSection("HeadStyles", false)
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <script src="~/Scripts/angular/angular.js"></script>
    <script src="~/Scripts/angular/angular-route.js"></script>
    @*<script src="~/Scripts/angular-ui/ui-bootstrap.min.js"></script>*@
    <script src="~/Scripts/angular-ui/ui-bootstrap-tpls.js"></script>
    <script src="~/Scripts/pages/app.Module.js"></script>
    @*<script src="~/Scripts/bootstrap/bootstrap.js"></script>*@
    <script src="https://unpkg.com/ng-table@2.1.0/bundles/ng-table.js"></script>
    @RenderSection("HeadScripts", false)
</head>
<body ng-app="appModule">
    <div class="navbar navbar-fixed-top" style="background-color:white">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("PFMS", "Main", "Dashboard", new { area = ""}, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Dashboard", "Main", "Dashboard")</li>
                    @if (Request.IsAuthenticated)
                    {
                        <li>@Html.ActionLink("Log out", "Logout", "Account")</li>
                    }
                    else
                    {
                        <li>@Html.ActionLink("Log in", "Login", "Account")</li>
                    }
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <footer>
            @*<p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>*@
        </footer>
    </div>

    <script src="~/Scripts/jquery/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap/bootstrap.min.js"></script>

    @RenderSection("FootScripts", false)
</body>
</html>