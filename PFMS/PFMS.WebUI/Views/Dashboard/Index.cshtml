@model IEnumerable<PFMS.Entities.Person>
@{
    ViewBag.Title = "Index";
}

@section HeadStyles{
    <link href="~/Content/dashboard .css" rel="stylesheet" />
}

@section HeadScripts{
    <script src="~/Scripts/pages/dashboard/dashboardAjaxService.js"></script>
    <script src="~/Scripts/pages/dashboard/modal/personModal/personModal.controller.js"></script>
    <script src="~/Scripts/pages/dashboard/dashboard.controller.js"></script>
}

<div class="container" ng-controller="dashboardController">
    <div class="row">
        <div class="col-lg-4 col-md-4">

        </div>
        <div class="col-lg-8 col-md-8 panel panel-body">
            <table id="persons" class="table table-responsive table-striped">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Phone</th>
                    </tr>
                </thead>
                <tbody class="text-info">
                    <tr ng-repeat="person in persons" ng-click="showDetailsInModal(person)">
                        <td>{{person.FirstName + " " + person.LastName}}</td>
                        <td>{{person.PhoneNumber}}</td>
                    </tr>
                </tbody>
            </table>
            <div class="text-center">
                <ul class="pagination pagination-lg">
                    <li ng-repeat="page in pagination.allPages track by $index"><a ng-click="getPersons($index + 1)">{{$index + 1}}</a></li>
                </ul>
            </div>
        </div>
    </div>
</div>


